{
  "family": "ai-resume-parser",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "ai-resume-parser",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/ai-resume-parser:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp",
          "hostPort": 8001
        }
      ],
      "environment": [
        {"name": "LOG_LEVEL", "value": "info"},
        {"name": "HOST", "value": "0.0.0.0"},
        {"name": "PORT", "value": "8001"},
        {"name": "API_KEY", "value": "YOUR_SECURE_API_KEY"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-resume-parser",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8001/api/v1/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ]
}
